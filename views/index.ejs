<% include partials/header %>

<div class="container register-form">
        <div class="form">
            <div class="note">
                <p>Simple Signup Form</p>
            </div>
<form method="POST" action="/users/add">
            <div class="form-content">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="text" class="form-control" name="name" placeholder="Your Name *" value=""/>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="email" placeholder="email" value=""/>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="text" class="form-control" name="pass" placeholder="Your Password *" value=""/>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btnSubmit" value="submit">Submit</button>
            </div>
        </div>
    </div>
</form>
<% include partials/footer %>